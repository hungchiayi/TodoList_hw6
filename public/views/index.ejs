<% layout( 'layout' ) -%>

<h1 id="page-title"><%= title %></h1>

<div id="list">
  <form action="/create" method="post" accept-charset="utf-8">
    <div class="item-new">
      <input class="input" type="text" name="title" placeholder="我是標題"/>
      <input class="input" type="text" name="content" placeholder="我是內容"/>
      <input class="item-new" type="submit" value="→" action="/create" />
    </div>
  </form>

<% todos.forEach( function ( todo ){ %>
  <div class="item">
    <a class="update-link" href="/edit/<%= todo._id %>" title="Update this todo item"><%= todo.title %></a>
    <a class="del-btn" href="/del/<%= todo._id %>" title="Delete this todo item">Delete</a>
  </div>
<% }); %>
</div>
